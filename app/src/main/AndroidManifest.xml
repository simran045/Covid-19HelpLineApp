<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.covid_19helpline">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".AboutUsActivity" android:theme="@style/AppTheme1"></activity>
        <activity android:name=".InfectedSateActivity" android:theme="@style/AppTheme1"></activity>
        <activity
            android:name=".CountryDetailsActivity"
            android:theme="@style/AppTheme1" />

        <activity
            android:name=".DistrictDetails"
            android:theme="@style/AppTheme1">
            <intent-filter>


                <action android:name=".DistrictDetails" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InfectedActivity"
            android:theme="@style/AppTheme1" />
        <activity android:name=".CovidHomePage">
            <intent-filter>
                <action android:name=".CovidHomePage" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>